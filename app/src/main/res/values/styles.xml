<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for coloring the Toolbar -->
        <!--<item name="windowActionBar">false</item>-->
        <item name="actionBarStyle">@style/RESAActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for coloring the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
            which is used to tint widgets -->
        <item name="actionMenuTextColor">@color/home_bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white_color</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>-->
    </style>
    <!--text color setting-->
    <style name="RESAActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <!--<style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">-->
        <!--<item name="android:src">@drawable/ic_home</item>-->
        <!--<item name="android:background">?android:attr/actionBarItemBackground</item>-->
    <!--</style>-->


    <style name="TextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white_color</item>>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="TextStyle1" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_body_profile</item>
        <item name="android:textColor">@color/white_color</item>>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="PersonalProfileSpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>
    <style name="PersonalProfileButtonStyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white_color</item>>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="LinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_gravity">fill</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>
